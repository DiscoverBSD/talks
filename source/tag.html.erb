---
pageable: true
per_page: 10
---
<div class="tagged">
  <h1>Articles tagged '<%= tagname %>'</h1>

  <% page_articles.each_with_index do |article, i| %>
    <p>
      <%= link_to article.title, article, class: "dotted" %> <span> <%= article.date.strftime('%b %e %Y') %> </span>
    </p>
  <% end %>

  <% if paginate %>
    <div class="pagination">
      <% if prev_page %>
        <%= link_to 'Previous page', prev_page, class: "button"  %>
      <% end %>
      <span class="pages">
        Page <%= page_number %> of <%= num_pages %>
      </span>
      <% if next_page %>
        <%= link_to 'Next page', next_page, class: "button" %>
      <% end %>
    </div>
  <% end %>
</div>
